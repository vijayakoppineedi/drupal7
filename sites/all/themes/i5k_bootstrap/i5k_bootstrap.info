 scripts[] = 'i5k-bootstrap-sass/js/i5k.js'
 scripts[] = 'i5k-bootstrap-sass/js/bootstrap/affix.js'
 scripts[] = 'i5k-bootstrap-sass/js/bootstrap/alert.js'
 scripts[] = 'i5k-bootstrap-sass/js/bootstrap/button.js'
 scripts[] = 'i5k-bootstrap-sass/js/bootstrap/carousel.js'
 scripts[] = 'i5k-bootstrap-sass/js/bootstrap/collapse.js'
 scripts[] = 'i5k-bootstrap-sass/js/bootstrap/dropdown.js'
 scripts[] = 'i5k-bootstrap-sass/js/bootstrap/modal.js'
 scripts[] = 'i5k-bootstrap-sass/js/bootstrap/tooltip.js'
 scripts[] = 'i5k-bootstrap-sass/js/bootstrap/popover.js'
 scripts[] = 'i5k-bootstrap-sass/js/bootstrap/scrollspy.js'
 scripts[] = 'i5k-bootstrap-sass/js/bootstrap/tab.js'
 scripts[] = 'i5k-bootstrap-sass/js/bootstrap/transition.js'
